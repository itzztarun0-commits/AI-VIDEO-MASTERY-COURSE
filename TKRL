    <script>
        const apiKey = ""; // Environment handles the key

        async function generateAIContent(type) {
            const topic = document.getElementById('aiTopic').value;
            if (!topic) {
                showToast("Pehle apna topic toh likhein!");
                return;
            }

            const loaderId = type === 'script' ? 'scriptLoader' : 'hookLoader';
            const textId = type === 'script' ? 'scriptText' : 'hookText';
            const btn = type === 'script' ? 'scriptBtn' : 'hookBtn';

            document.getElementById(loaderId).classList.remove('hidden');
            document.getElementById(textId).innerText = "Thinking...";
            document.getElementById(btn).disabled = true;

            const systemPrompt = "You are a social media viral growth expert. Generate viral Instagram Reel content in Hindi (written in Latin script like 'Dosto, kya aap jaante hain...'). If the user asks for a script, provide a 30-60 second high-energy script with scenes. If they ask for a hook, provide 3 catchy viral hooks for the video.";
            const userQuery = `Topic: ${topic}. Give me a ${type === 'script' ? 'Viral Video Script' : 'Catchy Hooks'}. Ensure the tone is viral and engaging.`;

            let retries = 0;
            const maxRetries = 5;

            while (retries < maxRetries) {
                try {
                    const response = await fetch(`https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${apiKey}`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({
                            contents: [{ parts: [{ text: userQuery }] }],
                            systemInstruction: { parts: [{ text: systemPrompt }] }
                        })
                    });

                    if (!response.ok) throw new Error('API failed');

                    const result = await response.json();
                    const aiText = result.candidates?.[0]?.content?.parts?.[0]?.text;

                    if (aiText) {
                        displayAIResult(aiText, type);
                        break;
                    }
                } catch (error) {
                    retries++;
                    const delay = Math.pow(2, retries) * 500;
                    await new Promise(resolve => setTimeout(resolve, delay));
                    if (retries === maxRetries) {
                        showToast("AI ne reply nahi diya. Kripya thodi der baad try karein.");
                    }
                }
            }

            document.getElementById(loaderId).classList.add('hidden');
            document.getElementById(textId).innerText = type === 'script' ? '‚ú® Generate Script' : '‚ú® Generate Hook';
            document.getElementById(btn).disabled = false;
        }

        function displayAIResult(text, type) {
            const container = document.getElementById('aiResultContainer');
            const resultText = document.getElementById('aiResultText');
            const label = document.getElementById('resultLabel');

            label.innerText = type === 'script' ? '‚ú® AI Generated Viral Script' : '‚ú® AI Generated Catchy Hooks';
            resultText.innerText = text;
            container.classList.remove('hidden');
            container.scrollIntoView({ behavior: 'smooth', block: 'center' });
        }

        function copyResult() {
            const text = document.getElementById('aiResultText').innerText;
            const dummy = document.createElement("textarea");
            document.body.appendChild(dummy);
            dummy.value = text;
            dummy.select();
            document.execCommand("copy");
            document.body.removeChild(dummy);
            showToast("Content copied to clipboard!");
        }

        function showToast(msg) {
            const box = document.getElementById('notifyBox');
            const content = document.getElementById('notifyContent');
            content.innerText = msg;
            box.classList.remove('hidden');
            box.classList.add('flex');
            setTimeout(() => box.classList.add('hidden'), 3000);
        }

        // Existing Notification Logic
        const names = ["Rajesh Kumar", "Amit Singh", "Priya Sharma", "Suresh Chandra", "Kavita Soni", "Deepak V."];
        setInterval(() => {
            const name = names[Math.floor(Math.random() * names.length)];
            showToast(`${name} ne abhi register kiya!`);
        }, 15000);

        // Countdown Timer
        function updateTimer() {
            const now = new Date();
            const end = new Date();
            end.setHours(23, 59, 59, 999);
            const diff = end - now;
            const h = Math.floor(diff / 3600000).toString().padStart(2, '0');
            const m = Math.floor((diff % 3600000) / 60000).toString().padStart(2, '0');
            const s = Math.floor((diff % 60000) / 1000).toString().padStart(2, '0');
            document.getElementById('countdown').innerText = `${h}:${m}:${s}`;
        }
        setInterval(updateTimer, 1000);

        // Seats Counter
        let seatCount = 17;
        setInterval(() => {
            if (seatCount > 3) {
                seatCount--;
                document.getElementById('seats').innerText = seatCount;
            }
        }, 30000);

        // Exit Intent
        let exitTriggered = false;
        document.addEventListener('mouseleave', (e) => {
            if (e.clientY < 0 && !exitTriggered) {
                document.getElementById('exitPopup').style.display = 'flex';
                exitTriggered = true;
            }
        });

        function closeExit() {
            document.getElementById('exitPopup').style.display = 'none';
        }

        // Form Submission
        document.getElementById('regForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const name = document.getElementById('name').value;
            const phone = document.getElementById('phone').value;
            const msg = `Hello Sir, I have registered for AI Video Mastery Workshop.\nName: ${name}\nPhone: ${phone}`;
            const waLink = `https://wa.me/916376532440?text=${encodeURIComponent(msg)}`;
            document.getElementById('formContainer').classList.add('hidden');
            document.getElementById('successMsg').classList.remove('hidden');
            document.getElementById('waRedirect').href = waLink;
        });

    </script>
</body>
</html>
